<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout_new_ingredient"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        >

        <EditText
            android:id="@+id/new_ingredient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter ingredient name"
            />

        <EditText
            android:id="@+id/new_ingredient_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_ingredient_name"
            android:hint="Enter quantity"/>

        <EditText
            android:id="@+id/new_ingredient_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/new_ingredient_quantity"
            android:hint="Enter unit"/>

        <ImageView
            android:id="@+id/postback"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_below="@id/new_ingredient_unit"
            android:onClick="postBackResult"/>
    </RelativeLayout>


</RelativeLayout>